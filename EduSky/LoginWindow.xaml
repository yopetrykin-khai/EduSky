<Window x:Class="EduSky.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F9F5F4">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Background="#89CBA0" Grid.Column="0">
            <TextBlock Text="EduSky" FontSize="36" FontWeight="Bold" Foreground="#2B2B2B"
                       Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Image Source="C:\EDUSKY\EduSky\EduSky\Images\LoginWindow.png" Stretch="Uniform" Margin="30,30,0,-117"/>
        </Grid>

        <Grid Grid.Column="1">
            <Border Background="#89CBA0"
                    CornerRadius="300,180,300,180"
                    Width="400" Height="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel Margin="57,0,40,0" VerticalAlignment="Center" Height="280">
                    <TextBlock Text="Login" FontSize="14" Margin="0,20,0,5" Foreground="Black" Height="20" Width="290"/>
                    <TextBox Name="LoginBox" BorderThickness="0,0,0,1" Background="Transparent"
                             FontSize="16" Foreground="Black" />

                    <TextBlock Text="Password" FontSize="14" Margin="0,20,0,5" Foreground="Black" Height="20" Width="288"/>
                    <PasswordBox Name="PasswordBox" BorderThickness="0,0,0,1"
                                 Background="Transparent" FontSize="16" Foreground="Black"/>

                    <Button Content="Sign in" Margin="0,30,0,10" Height="30"
                            Background="#2B2B2B" Foreground="White"
                            FontSize="16" BorderBrush="Transparent" Cursor="Hand" Click="SignInButton_Click" Width="150"/>

                    <Button Content="Sign up" Margin="0,30,0,10" Height="30"
                            Background="#2B2B2B" Foreground="White"
                            FontSize="16" BorderBrush="Transparent" Cursor="Hand" Width="150" Click="SignUpButton_Click"/>
                </StackPanel>
            </Border>
            <TextBlock Text="edusky2006@gmail.com" FontSize="12" Foreground="Gray"
                       HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10"/>
        </Grid>
    </Grid>
</Window>
